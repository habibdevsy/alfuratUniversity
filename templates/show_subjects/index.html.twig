<table class="table table-hover" id="table">
  <thead>
    <tr>
      <th scope="col"> اسم المادة</th>
      <th scope="col">اسم الكلي</th>
      <th scope="col">درجة النجاح</th>
    </tr>
  </thead>
  <tbody>
  {% for item in subjects %}
    <tr class="table-active">
    
      <td id="td">{{item.subjectName}}</td>
      <td id="td">{{item.college.collegeName}}</td>
      <td id="td">{{item.passingGrade}}</td>
       <td> 
        <a class="btn btn-primary" href="{{ path('subject_edit', { id: item.id }) }}">تعديل</a>
        </td> 
    </tr>
  {% endfor %}
       
  </tbody>
  </table>
  
    <div class="navigation mt-5">
        {{ knp_pagination_render(subjects) }}
    </div>
    
{% endblock %}
