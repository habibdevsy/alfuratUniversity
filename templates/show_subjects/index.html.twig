{% extends 'base.html.twig' %}

{% block title %}المواد{% endblock %}
{% block head %}

{% endblock %}
{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
  
</style>

      <form class="example-wrapper" role="search" id="form" method="GET" action="{{ path('searchsubject') }}">
    <div>
        <input type="text" class="form-control" name="search" id="search" placeholder="أدخل اسم المادة">
        <button type="submit" class="btn btn-success" name="sub">بحث</button>
    </div>
    </form>

